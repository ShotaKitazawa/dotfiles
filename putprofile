#!/usr/bin/env bash

# !! DOTFILE OVERWRITE !!

path=$(cd $(dirname $0) && pwd)

switch_env(){
  if [[ "$(uname)" = 'Darwin' ]]; then
    echo $2
  elif [[ "$(uname -r)" =~ ^.*-Microsoft$ ]]; then
    echo $3
  elif [[ "$(uname)" = 'Linux' ]]; then
    echo $1
  elif [[ "$(uname)" = 'FreeBSD' ]]; then
    echo $4
  fi
}

remove_file_or_check_link(){
  if [ -L $1 ]; then
    echo "$1 has already deployed"
    return 1
  elif [ -e $1 ]; then
    rm $1 -rf
  fi
  return 0
}

deploylink(){
  if [ ! -e $path/$1 ];then
    echo "$path/$1 not exists"
    return 1
  fi
  if remove_file_or_check_link $2/$(basename $1);then
    ln -s $path/$1 $2/$(basename $1)
    echo "$(basename $1) was deployed to $2/"
    return 0
  else
    return 1
  fi
}

# check tmux version
if which tmux > /dev/null 2>&1; then
  if [ $(echo "$(tmux -V | awk '{print $2}') >= 2.4" | bc) == 1 ]; then
    deploylink tmux-2.4/.tmux.conf $HOME
  else
    deploylink tmux-before2.4/.tmux.conf $HOME
  fi
fi

# deploy dotfiles' symbolic link to $HOME
deploylink .inputrc $HOME
deploylink .gitconfig $HOME
deploylink .gitignore $HOME
deploylink .tmux.conf $HOME
deploylink .vim $HOME
deploylink .bashrc_self $HOME
deploylink .gdbinit $HOME
deploylink .config $HOME
deploylink .vrapperrc $HOME
deploylink .latexmkrc $HOME

# link config on environment
deploylink .config/memo/$(switch_env linux mac linux)/config.toml $path/.config/memo

# let .bashrc read .bashrc_self
if ! grep .bashrc_self ~/.bashrc > /dev/null 2>&1; then
  echo "if [ -f ~/.bashrc_self ]; then source ~/.bashrc_self; fi" >> ~/.bashrc
fi

# vim-undofile folder
if [ ! -d ~/.vimundo ]; then
  mkdir ~/.vimundo
  echo "mkdir ~/.vimundo"
fi

# download peda (gdb extention)
if [ ! -d ~/.peda ]; then
  git clone https://github.com/longld/peda ~/.peda > /dev/null 2>&1
  echo "downloaded peda"
fi

# install Powerline fonts for lightline.vim
if [ ! -d ~/.fonts ]; then
  git clone https://github.com/powerline/fonts.git ~/.fonts > /dev/null 2>&1
  if [ $? = 0 ]; then
    if ~/.fonts/install.sh > /dev/null; then
      echo "install Powerline fonts"
    else
      echo "error: failed to download Powerline fonts"
    fi
  else
    echo "error: failed to download Powerline fonts"
  fi
fi

# Only root user
if [ "$(whoami)" = "root" ]; then

  # deploy systemd service file (for Linux)
  if [ "$(switch_env linux)" = "linux" ]; then
    for service in $(ls $path/.services/); do
      if deploylink .services/$service /etc/systemd/system; then
        systemctl enable $path/.services/$service
      fi
    done
    systemctl daemon-reload
  fi

fi
