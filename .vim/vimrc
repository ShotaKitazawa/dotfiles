filetype off

" common setting
runtime! include/common/plugin.vim
runtime! include/common/color.vim
runtime! include/common/setting.vim

" neovim setting
if has('nvim')
  runtime! include/neovim/plugin.vim
  runtime! include/neovim/color.vim
  runtime! include/neovim/setting.vim
endif

" macvim setting
if has('gui_macvim')
  runtime! include/macvim/plugin.vim
  runtime! include/macvim/color.vim
  runtime! include/macvim/setting.vim
endif

" vim setting
if !has('nvim')
  runtime! include/vim/plugin.vim
  runtime! include/vim/color.vim
  runtime! include/vim/setting.vim
endif

" read other files for various language
"""""""""""""""""""""""""""""
filetype plugin indent on
autocmd BufRead,BufNewFile *.py setfiletype python.vim
autocmd BufRead,BufNewFile *.cpp setfiletype cpp.vim
autocmd BufRead,BufNewFile *.c setfiletype c.vim
autocmd BufRead,BufNewFile *.cc setfiletype cc.vim
autocmd BufRead,BufNewFile *.h setfiletype h.vim
autocmd BufRead,BufNewFile *.html setfiletype html.vim
autocmd BufRead,BufNewFile *.htm setfiletype html.vim
autocmd BufRead,BufNewFile *.go setfiletype go.vim
